{{template "base/head" .}}
<div class="repository file list">
	{{template "repo/header" .}}
	<div class="ui container">
		{{template "base/alert" .}}
		<div class="ui positive message hide" id="divMensajeCalificacion">
		 	<i class="close icon cerrarMensaje"></i>
			<p id="mensaje">La calificaci√≥n ha sido actualizada</p>
		</div>
	<div class="ui centered  grid">
		<div class="row">
			<div class="ui three doubling cards">
				<div class="card">
					<div class="content">
						<div class="header">
							{{.i18n.Tr "repo_info"}}
						</div>
						<div class="ui link left aligned list" id="repo-info">
							{{if .Repository.ProfessorID}}
							<div class="item">
								<i class="suitcase icon"></i>
								<div class="content">
									<div class="header">{{.i18n.Tr "Profesor"}}</div>
									<div class="description">
										<a href="/explore/repos?q={{.Repository.GetProfessorName}}">
										  {{.Repository.GetProfessorName}}
										</a>
									</div>
								</div>
							</div>
							{{end}}

							{{if .Repository.SemesterID}}
							<div class="item">
								<i class="calendar icon"></i>
								<div class="content">
									<div class="header">{{.i18n.Tr "semester"}}</div>
									<div class="description">
										<a href="/explore/repos?q={{.Repository.GetSemesterName}}">
										  <div class="detail">{{.Repository.GetSemesterName}}</div>
										</a>
									</div>
								</div>
							</div>
							{{end}}

							{{if .Repository.GroupID}}
							<div class="item">
								<i class="users icon"></i>
								<div class="content">
									<div class="header">{{.i18n.Tr "group"}}</div>
									<div class="description">
										<a href="/explore/repos?q={{.Repository.GetGroupName}}">
										  <div class="detail">{{.Repository.GetGroupName}}</div>
										</a>
									</div>
								</div>
							</div>
							{{end}}

							{{if .Repository.SubjectID}}
							<div class="item">
								<i class="book icon"></i>
								<div class="content">
									<div class="header">{{.i18n.Tr "subject"}}</div>
									<div class="description">
										<a href="/explore/repos?q={{.Repository.GetSubjectName}}">
										  <div class="detail">{{.Repository.GetSubjectName}}</div>
										</a>
									</div>
								</div>
							</div>
							{{end}}
						</div>
					</div>
				</div>
				
				<div class="card">
					<div class="content">
						<div class="header">{{.i18n.Tr "repo_global_rating"}}</div>
						<div class="meta">{{ .Number}} {{.i18n.Tr "repo_users_rated"}}</div>
						<div class="description">
					        <div class="ui statistic">
					        	<img src="http://www.clipartbest.com/cliparts/9i4/pz5/9i4pz586T.gif" class="ui circular inline image" style="max-height: 6rem;">
								<div class="value rating-color">
									{{ .Average}}
								</div>
								<div class="label rating-color">
								</div>
							</div>
					    </div>
					</div>
					{{if .IsSigned}}
					<div class="extra">
						{{.i18n.Tr "repo_rate"}}<br>
							<div class="ui star rating" data-max-rating="10" data-user-id="{{.SignedUser.ID}}" data-repo-id="{{.Repository.ID}}"></div>
					</div>
					{{end}}
				</div>

				<div class="card">
					<div class="content">
						<div class="header">
							{{.i18n.Tr "repo_description"}}
						</div>
						{{if .Repository.DescriptionHtml}}<span class="description has-emoji">{{.Repository.DescriptionHtml}}</span>{{else}}<span class="no-description text-italic">{{.i18n.Tr "repo.no_desc"}}</span>{{end}}
						<p><a class="link" href="{{.Repository.Website}}">{{.Repository.Website}}</a></p>
					</div>
				</div>
				
			</div>
		</div>
				
			
		</div>
		<script type="text/javascript">
			var globalr = parseFloat('{{.Average}}');
			console.log('{{.Rating}}')
			$('.ui.rating').rating({initialRating: {{.Rating}},});

			$(document).ready(function($) {

				$( ".cerrarMensaje" ).click(function() {
					$("#divMensajeCalificacion").hide();
				});

				if($('#repo-info').html().trim().length == 0){
					$('#repo-info').append('{{if .IsRepositoryAdmin}}{{.i18n.Tr "no_info_repo_owner"}}{{else}}{{.i18n.Tr "no_info_repo"}}{{end}}');
				}

				if(globalr > 0){
					if (globalr > 0 && globalr <= 3){
						$('.label.rating-color').text('Muy Malo');
						$('.rating-color').css('color', '#EC4060');
					} else if(globalr > 3 && globalr <= 5){
						$('.label.rating-color').text('Malo');
						$('.rating-color').css('color', '#E8993A');
					} else if(globalr > 5 && globalr <= 7){
						$('.label.rating-color').text('Regular');
						$('.rating-color').css('color', '#E0D541');
					} else if(globalr > 7 && globalr <= 9){
						$('.label.rating-color').text('Bueno');
						$('.rating-color').css('color', '#ABD846');
					} else if(globalr > 9 && globalr <= 10){
						$('.label.rating-color').text('Excelente');
						$('.rating-color').css('color', '#68CCDE');
					} 
				} else {
					$('.label.rating-color').text('Sin Votos');
					$('.rating-color').css('color', '#ABADAD');
				}
			});
		</script>

		<div class="ui grid">
			{{if not .Repository.IsMirror}}
			<div class="row">
			  	<div class="column">
			    	<div class="ui segment">
			    		<div class="ui left ribbon label">
					        <i class="users icon"></i>Colaboradores
					    </div>
				    	<div class="ui equal width mini horizontal list">
				    		{{if .IsRepositoryAdmin}}
				    		<a class="ui right corner label" href="{{.RepoLink}}/settings/collaboration">
						        <i class="plus icon"></i>
						    </a>
						    {{end}}
						  	{{range .Collaborators}}
							<div class="item">
								<a class="ui fluid basic image label" href="{{AppSubUrl}}/{{.Name}}">
								  {{if .Type}}
								  	<img src="http://www.uco.edu.co/idiomas/PublishingImages/teacher.png">
								  {{else}}
								  	<img src="{{if not .UseCustomAvatar}}https://secure.gravatar.com/avatar/{{.Avatar}}{{else}}/avatars/{{.ID}}{{end}}">
								  {{end}}
								  {{.Name}}
								</a>
							</div>
							{{end}}
						</div>
				    </div>
				</div>
			</div>
			{{end}}
		  	<div class=" dluid row">
			    <div class="left floated left aligned column">
				    	<div class="ui mini horizontal list">
						  	{{range .HTags}}
						  	<div class="item">
								<a class="ui tiny label" href="/explore/repos?q={{.Etiqueta}}">
								  <i class="tag icon"></i>
								  {{.Etiqueta}}
								</a>
							</div>
							{{end}}
							{{if .IsRepositoryAdmin}}
							<div class="item">
							    <a class="ui compact mini icon button" href="{{.RepoLink}}/settings/tags">
								  <i class="plus icon"></i>
								</a>
							</div>
						    {{end}}
						</div>
				</div>
			</div>
		</div>

		<div class="ui secondary menu">
			{{if .PullRequestCtx.Allowed}}
				<div class="fitted item">
					<a href="{{.BaseRepo.Link}}/compare/{{.BaseRepo.DefaultBranch}}...{{.PullRequestCtx.HeadInfo}}">
						<button class="ui green small button"><i class="octicon octicon-git-compare"></i></button>
					</a>
				</div>
			{{end}}
			{{template "repo/branch_dropdown" .}}
			<div class="fitted item">
				<div class="ui breadcrumb">
					<a class="section" href="{{.RepoLink}}/src/{{EscapePound .BranchName}}">{{EllipsisString .Repository.Name 25}}</a>
					{{ $n := len .TreeNames}}
					{{ $l := Subtract $n 1}}
					{{range $i, $v := .TreeNames}}
						<div class="divider"> / </div>
						{{if eq $i $l}}
							<span class="active section">{{EllipsisString $v 15}}</span>
						{{else}}
							{{ $p := index $.Paths $i}}
							<span class="section"><a href="{{EscapePound $.BranchLink}}/{{EscapePound $p}}">{{EllipsisString $v 15}}</a></span>
						{{end}}
					{{end}}
				</div>
			</div>
			<div class="right fitted item">
				{{if .Repository.CanEnableEditor}}
					<div id="file-buttons" class="ui tiny blue buttons">
						{{if .CanAddFile}}
							<a href="{{.RepoLink}}/_new/{{EscapePound .BranchName}}/{{EscapePound .TreePath}}" class="ui button">
								{{.i18n.Tr "repo.editor.new_file"}}
							</a>
						{{end}}
						{{if .CanUploadFile}}
							<a href="{{.RepoLink}}/_upload/{{EscapePound .BranchName}}/{{EscapePound .TreePath}}" class="ui button">
								{{.i18n.Tr "repo.editor.upload_file"}}
							</a>
						{{end}}
					</div>
				{{end}}

				<!-- Only show colne panel in repository home page -->
				{{if eq $n 0}}
					<div class="ui action small input" id="clone-panel">
						<button class="ui basic clone button" id="repo-clone-https" data-link="{{.CloneLink.HTTPS}}">
							{{if UseHTTPS}}HTTPS{{else}}HTTP{{end}}
						</button>
						{{if not $.DisableSSH}}
							<button class="ui basic clone button" id="repo-clone-ssh" data-link="{{.CloneLink.SSH}}">
								SSH
							</button>
						{{end}}
						<input id="repo-clone-url" value="{{$.CloneLink.HTTPS}}" readonly>
						<button class="ui basic icon button poping up clipboard" id="clipboard-btn" data-original="{{.i18n.Tr "repo.copy_link"}}" data-success="{{.i18n.Tr "repo.copy_link_success"}}" data-error="{{.i18n.Tr "repo.copy_link_error"}}" data-content="{{.i18n.Tr "repo.copy_link"}}" data-variation="inverted tiny" data-clipboard-target="#repo-clone-url">
							<i class="octicon octicon-clippy"></i>
						</button>
						<div class="ui basic jump dropdown icon button">
							<i class="download icon"></i>
							<div class="menu">
								<a class="item" href="{{$.RepoLink}}/archive/{{EscapePound $.BranchName}}.zip"><i class="octicon octicon-file-zip"></i> ZIP</a>
								<a class="item" href="{{$.RepoLink}}/archive/{{EscapePound $.BranchName}}.tar.gz"><i class="octicon octicon-file-zip"></i> TAR.GZ</a>
							</div>
						</div>
					</div>
				{{end}}
			</div>
		</div>
		{{if .IsViewFile}}
			{{template "repo/view_file" .}}
		{{else}}
			{{template "repo/view_list" .}}
		{{end}}
	</div>
</div>
{{template "base/footer" .}}
