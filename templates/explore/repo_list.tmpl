<style>
	.ui.repository.list .item:not(:first-child) {
		border: 0;
		padding-top: 0;
	}
</style>
<div class="ui repository list">
	{{range .Repos}}
		<div class="ui fluid card">
			<div class="content">
				<div class="ui right metas">
					<span class="text grey"><i class="octicon octicon-star"></i> {{.NumStars}}</span>
				</div>
				<div class="header">
					<a class="name" href="{{AppSubUrl}}/{{if .Owner}}{{.Owner.Name}}{{else if $.Org}}{{$.Org.Name}}{{else}}{{$.Owner.Name}}{{end}}/{{.Name}}">{{if $.PageIsExplore}}{{.Owner.Name}} / {{end}}{{.Name}}</a>
					{{if .IsPrivate}}
						<span class="text gold"><i class="octicon octicon-lock"></i></span>
					{{else if .IsFork}}
						<span><i class="octicon octicon-repo-forked"></i></span>
					{{else if .IsMirror}}
						<span><i class="octicon octicon-repo-clone"></i></span>
					{{end}}
				</div>
				<div class="meta">
					{{$.i18n.Tr "org.repo_updated"}} {{TimeSince .Updated $.i18n.Lang}}
				</div>
				<div class="description">
					{{if .DescriptionHtml}}<p class="has-emoji">{{.DescriptionHtml}}</p>{{end}}
					{{if .SemesterID}}
					<a class="ui image label" href="/explore/repos?q={{.GetSemesterName}}">
					  <i class="calendar icon"></i>
					  Semestre
					  <div class="detail">{{.GetSemesterName}}</div>
					</a>
					{{end}}

					{{if .GroupID}}
					<a class="ui image label" href="/explore/repos?q={{.GetGroupName}}">
					  <i class="users icon"></i>
					  Grupo
					  <div class="detail">{{.GetGroupName}}</div>
					</a>
					{{end}}

					{{if .SubjectID}}
					<a class="ui image label" href="/explore/repos?q={{.GetSubjectName}}">
					  <i class="book icon"></i>
					  Materia
					  <div class="detail">{{.GetSubjectName}}</div>
					</a>
					{{end}}
					<br>
					{{if .GetTags}}
						<div class="ui horizontal list" style="">
						{{range .GetTags}}
							<div class="item" style="padding-bottom: 0;">
								<a class="ui tiny label" href="/explore/repos?q={{.Etiqueta}}">
								  <i class="tag icon"></i>
								  {{.Etiqueta}}
								</a>
							</div>
						{{end}}
						</div>
					{{end}}
				</div>
			</div>
		</div>
	{{end}}
</div>
