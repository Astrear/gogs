{{template "base/head" .}}
<div class="user course">
	<div class="ui container">
		<div class="ui grid">
			{{template "user/settings/navbar" .}}
			<div class="twelve wide column content">
				{{template "base/alert" .}}
				<h4 class="ui top attached header">
					{{.i18n.Tr "user.settings.manage_course"}}
					<div class="ui right">
						<a class="ui black tiny button" href="{{AppSubUrl}}/user/settings/course/new">{{.i18n.Tr "user.settings.course.add_course"}}</a>
					</div>
				</h4>
				
				<div class="ui top attached tabular menu">
					{{range $i, $s := .Semesters}}
						{{if eq $i 0}}
							<a class="semestre active item" data-tab="{{.Name}}">{{.Name}}</a>
						{{else}}
							<a class="semestre item" data-tab="{{.Name}}">{{.Name}}</a>
						{{end}}
				  	{{end}}
				</div>
				{{range $i, $s := .Semesters}}
						{{if eq $i 0}}
							<div class="ui bottom attached active tab segment tabCurso" data-tab="{{.Name}}" id="tabCurso_{{.Name}}">
  								
							</div>
						{{else}}
							<div class="ui bottom attached tab segment tabCurso" data-tab="{{.Name}}" id="tabCurso_{{.Name}}">
  								
							</div>
						{{end}}
				  	{{end}}

				<div class="ui attached segment collaborator list" style="display: none;">
					{{range .Courses}}
						<div class="itemCurso item ui grid" data-tab="{{.Semester.Name}}">
							<div class="ui six wide column">
								<span class="octicon octicon-calendar"></span>
								{{.Semester.Name}}
								<br>
								<span class="octicon octicon-briefcase"></span>
								{{.Group.Name}}
								<br>
								<span class="octicon octicon-book"></span>
								{{.Subject.Name}}
							</div>
							<div class="ui seven wide column">
								<span class="octicon octicon-shield"></span>
								<div class="ui inline dropdown">
								  <div class="text">{{if .Course.IsActive}}Activo{{else}}Inactivo{{end}}</div>
								  <i class="dropdown icon"></i>
								  <div class="access-mode menu" data-url="{{$.Link}}/status" data-sid="{{.Subject.ID}}">
								    <div class="item" data-text="{{$.i18n.Tr "user.settings.course.active"}}" data-value="1">{{$.i18n.Tr "user.settings.course.active"}}</div>
								    <div class="item" data-text="{{$.i18n.Tr "user.settings.course.inactive"}}" data-value="0">{{$.i18n.Tr "user.settings.course.inactive"}}</div>
								  </div>
								</div>
							</div>
							<div class="ui two wide column">
								<button class="ui red tiny button inline text-thin delete-button" data-url="{{$.Link}}/delete" data-id="{{.Course.ID}}">
									{{$.i18n.Tr "user.settings.course.delete_course"}}
								</button>
							</div>
						</div>
					{{end}}
				</div>
				<script>
					$( document ).ready(function() {	
    					$( ".semestre" ).each(function( index, this1 ) {
  							var sem = $(this1).attr("data-tab");
  							$( ".itemCurso" ).each(function( index2, this2 ) {
  								var sem2 = $(this2).attr("data-tab");
  								if(sem2 == sem){
  									$(this2).appendTo("#tabCurso_" + sem2);
  								}
  							});
						});
					});
				</script>
			</div>
		</div>
	</div>
</div>

<div class="ui small basic delete modal">
	<div class="ui icon header">
		<i class="trash icon"></i>
		{{.i18n.Tr "settings.email_deletion"}}
	</div>
	<div class="content">
		<p>{{.i18n.Tr "settings.email_deletion_desc"}}</p>
	</div>
	{{template "base/delete_modal_actions" .}}
</div>
{{template "base/footer" .}}
